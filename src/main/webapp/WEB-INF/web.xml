<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>relative_dburl</param-name>
        <param-value>db.sl</param-value>
    </context-param>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ProductSearchServlet</servlet-name>
        <servlet-class>servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin_jsp</servlet-name>
        <jsp-file>/WEB-INF/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductSearchServlet</servlet-name>
        <url-pattern>/searchProduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Homepage_jsp</servlet-name>
        <jsp-file>/WEB-INF/homepage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Homepage_jsp</servlet-name>
        <url-pattern>/restricted/homepage.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Shop_list</servlet-name>
        <jsp-file>/WEB-INF/shop_list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shop_list</servlet-name>
        <url-pattern>/restricted/shopping.list.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Registration_jsp</servlet-name>
        <jsp-file>/WEB-INF/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration_jsp</servlet-name>
        <url-pattern>/registration.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login_jsp</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login_jsp</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShoppingListServlet</servlet-name>
        <servlet-class>servlets.ShoppingListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingListServlet</servlet-name>
        <url-pattern>/restricted/shopping.lists.handler</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Error_jsp</servlet-name>
        <jsp-file>/WEB-INF/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error_jsp</servlet-name>
        <url-pattern>/error.html</url-pattern>
    </servlet-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.WebAppContextListener</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin/admin.handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin_jsp</servlet-name>
        <url-pattern>/admin/admin.html</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
